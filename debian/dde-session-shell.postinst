#!/bin/sh

set -e 

PARENT_DIR=/var/lib/lightdm/.config
CONFIG_DIR=${PARENT_DIR}/deepin

if [ "$1" = "configure" ];then
	[ -d $CONFIG_DIR ] || mkdir -p $CONFIG_DIR
	chown -R lightdm:lightdm $PARENT_DIR

	update-alternatives --install /usr/share/xgreeters/lightdm-greeter.desktop \
	lightdm-greeter /usr/share/xgreeters/lightdm-deepin-greeter.desktop 90
fi

#DEBHELPER#
exit 0
